<div class="container-fluid mt-4 mb-5">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">Manage Categories</h1>
      <p class="text-muted mb-0">Organize products by categories</p>
    </div>
    <div>
      <%= link_to admin_root_path, class: "btn btn-outline-secondary me-2" do %>
        Dashboard
      <% end %>
      <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
        Add Category
      <% end %>
    </div>
  </div>

  <!-- Categories Table -->
  <div class="card shadow-sm border-0">
    <div class="card-body p-0">
      <% if @categories.any? %>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 80px;">ID</th>
                <th>Category Name</th>
                <th>Products Count</th>
                <th style="width: 150px;" class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td>
                    <span><%= category.id %></span>
                  </td>
                  <td>
                    <strong><%= category.name %></strong>
                  </td>
                  <td>
                    <% product_count = category.products.count %>
                    <span>
                      <%= product_count %> <%= product_count == 1 ? 'product' : 'products' %>
                    </span>
                  </td>
                  <td class="text-center">
                    <div class="btn-group" role="group">
                      <%= link_to edit_admin_category_path(category),
                                  class: "btn btn-sm btn-outline-primary",
                                  title: "Edit" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                          <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>
                      <% end %>
                      <%= button_to admin_category_path(category),
                                    method: :delete,
                                    data: { confirm: "Are you sure you want to delete #{category.name}? This action cannot be undone." },
                                    class: "btn btn-sm btn-outline-danger",
                                    title: "Delete" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                          <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-tags text-muted mb-3" viewBox="0 0 16 16">
            <path d="M3 2v4.586l7 7L14.586 9l-7-7H3zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2z"/>
            <path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zM1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1v5.086z"/>
          </svg>
          <h5 class="text-muted">No categories found</h5>
          <p class="text-muted">Get started by creating your first category</p>
          <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
