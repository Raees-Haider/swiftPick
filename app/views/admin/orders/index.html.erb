<div class="container-fluid mt-4 mb-5">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">Manage Orders</h1>
      <p class="text-muted mb-0">View and manage all customer orders</p>
    </div>
    <div>
      <%= link_to admin_root_path, class: "btn btn-outline-secondary" do %>
        Dashboard
      <% end %>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#0d6efd" viewBox="0 0 16 16">
                <path d="M0 1.5A1.5 1.5 0 0 1 1.5 0h13A1.5 1.5 0 0 1 16 1.5v2A1.5 1.5 0 0 1 14.5 5h-13A1.5 1.5 0 0 1 0 3.5v-2zM1.5 1a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5h-13zM5 8.5A1.5 1.5 0 0 1 6.5 7h3A1.5 1.5 0 0 1 11 8.5v2a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 5 10.5v-2zM6.5 8a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5h-3zM0 12a1.5 1.5 0 0 1 1.5-1.5h13A1.5 1.5 0 0 1 16 12v2a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14v-2zm1.5-.5a.5.5 0 0 0-.5.5v2a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5h-13z"/>
              </svg>
            </div>
            <div>
              <h6 class="text-muted mb-0 small">Total Orders</h6>
              <h4 class="mb-0"><%= @orders.count %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#198754" viewBox="0 0 16 16">
                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8z"/>
              </svg>
            </div>
            <div>
              <h6 class="text-muted mb-0 small">Completed</h6>
              <h4 class="mb-0"><%= @orders.where(status: 'completed').count %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#0dcaf0" viewBox="0 0 16 16">
                <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
              </svg>
            </div>
            <div>
              <h6 class="text-muted mb-0 small">Total Revenue</h6>
              <h4 class="mb-0">Rs <%= (@orders.sum(:total_amount) || 0).round(2) %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="card shadow-sm border-0">
    <div class="card-body p-0">
      <% if @orders.any? %>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 100px;">Order ID</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Items</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th style="width: 130px;" class="text-center">Actions</th>
              </tr>
            </thead>
            
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <strong >#<%= order.id %></strong>
                  </td>
                  
                  <td>
                    <div class="d-flex align-items-center">
                      <div>
                        <strong><%= order.user.name || order.user.email %></strong><br>
                        <small class="text-muted"><%= order.user.email %></small>
                      </div>
                    </div>
                  </td>
                  
                  <td>
                    <strong><%= order.created_at.strftime("%B %d, %Y") %></strong>
                  </td>
                  
                  <td>
                    <span>
                      <%= order.order_items.sum(:quantity) %>
                    </span>
                  </td>
                  
                  <td>
                    <strong>Rs <%= order.total_amount.round(2) %></strong>
                  </td>
                  
                  <td>
                    <% display_status = order.status == 'paid' ? 'pending' : order.status %>
                    <% case display_status %>
                    <% when 'pending' %>
                      <span class="badge bg-warning text-dark">
                        Pending
                      </span>
                    <% when 'completed' %>
                      <span class="badge bg-success">
                        Completed
                      </span>
                    <% when 'cancelled' %>
                      <span class="badge bg-danger">Cancelled</span>
                    <% else %>
                      <span class="badge bg-secondary"><%= display_status&.capitalize || 'Pending' %></span>
                    <% end %>
                  </td>
                  
                  <td>
                    <% case order.payment_method %>
                    <% when 'cash_on_delivery' %>
                      <span class="badge bg-info text-dark">Cash on Delivery</span>
                    <% when 'credit_card' %>
                      <span class="badge bg-primary">Credit/Debit Card</span>
                    <% else %>
                      <small class="text-muted"><%= order.payment_method&.capitalize || 'N/A' %></small>
                    <% end %>
                  </td>
                  
                  <td class="text-center">
                    <%= link_to admin_order_path(order), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                      </svg>
                      View
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-inbox text-muted mb-3" viewBox="0 0 16 16">
            <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438L14.933 9zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z"/>
          </svg>
          <h5 class="text-muted">No orders yet</h5>
          <p class="text-muted mb-0">Orders will appear here when customers place orders.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
